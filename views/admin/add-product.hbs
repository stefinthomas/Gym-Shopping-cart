<section>
    <div class="container">
        <div class="row">
            <div class="col=md-6">
                <h2 class="text-center mt-4">Add Product</h2>
                <form action="/admin/add-product" method="POST" enctype="multipart/form-data">
                    <label for="">Name</label>
                    <input type="text" name="Name" class="form-control" style="border-color: black;" required >

                    <label for="">Category</label>
                    <input type="text" name="Category" class="form-control" style="border-color: black;" required >

                    <label for="">Price</label>
                    <input type="number" name="Price" class="form-control" style="border-color: black;" required>

                    <label for="">description</label>
                    <input type="text" name="Description" class="form-control" style="border-color: black;" required>

                    <label for="">Image</label>
                    <input type="file" name="Image" class="form-control" style="border-color: black;" required>

                    <label for="">Stock</label>
                    <input type="number" name="Stock" class="form-control" style="border-color: black;" required>


                    <button type="submit" class="btn btn-success mt-4">Submit</button>
                </form>

            </div>
        </div>
    </div>
</section>