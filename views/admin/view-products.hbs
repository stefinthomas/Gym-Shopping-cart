<section>
    <div class="container">
        <div class="row mt-4 mb-4">
            <a href="/admin/add-product" style="width: 150px; height: 40px" class="btn btn-success ml-auto ">Add Product</a>
        </div>
        <table class="table mt-5" id="productstable">
  <thead class="thead" style="background-color: #1e1f1e; color:white">
    <tr>
      
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
      <th scope="col">Description</th>
      <th scope="col">Stock</th>
      <th scope="col">Image</th>
      <th scope="col">Options</th>
      
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Price}}</td>
      <td>{{this.Description}}</td>
      <td>{{this.Stock}}</td>
      <td><img style="width: 50px;height:50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td style='text-align:center;vertical-align:middle'>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.Name}} ?')">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

    </div>
    
</section>




<script>
  $(function () {
    $('#productstable').DataTable();
  });
</script>